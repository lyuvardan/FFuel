<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:background="#82c268">

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:background="@drawable/dialog_layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvAirCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:background="#111"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tvFlightStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:background="#82c268"
                    android:textStyle="bold"
                    android:layout_weight="0.1"
                    android:text="ddddddd"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Departure"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tvDepDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#f11"
                    android:text="ddddddd"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Arrival"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tvArrTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/tvArrDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="#f11"
                    android:text="ddddddd"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/llStatBarWithNoConFlight"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_circle"/>

                <View
                    android:id="@+id/passedWay"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="10"
                    android:background="#111">
                </View>
                <View
                    android:id="@+id/remainedWay"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.6"
                    android:background="#ececec">
                </View>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_circle"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="tex" />
                <TextView
                    android:id="@+id/tvDest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="1"
                    android:text="tex" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/awbContainerLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>
</LinearLayout>