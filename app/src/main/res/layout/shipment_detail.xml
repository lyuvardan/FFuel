<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--toolbar-->
    <include
        layout="@layout/app_bar_shipment_detail"
        android:id="@+id/app_bar_shipment_detail">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvAwb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:id="@+id/tvAirlineCode"
                    android:padding="5dp"
                    android:background="#111"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="15dp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tvConsigneeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#607781"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPARTURE"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="#111111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departureTime"
                    android:paddingLeft="15dp"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARRIVAL"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="#111111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrivalTime"
                    android:paddingLeft="15dp"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AWB"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:id="@+id/llAwbContainerLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="56dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>

                <TextView
                    android:id="@+id/stReceived"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#d4d4d4"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#a1a1a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="received"/>
                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>

                <TextView
                    android:id="@+id/stLoaded"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#d4d4d4"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#a1a1a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Loaded"/>
                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>

                <TextView
                    android:id="@+id/stShipped"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#d4d4d4"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#a1a1a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Shipped"/>
                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>
                <TextView
                    android:id="@+id/stTransit"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#d4d4d4"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#a1a1a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Transit"/>
                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>
                <TextView
                    android:id="@+id/stArrived"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#d4d4d4"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#a1a1a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Arrived"/>
                <View
                    android:background="#d8d8d8"
                    android:layout_width="1dp"
                    android:layout_height="60dp">
                </View>
            </LinearLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25sp"
                android:text="AWB PRODUCTS"/>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llAwbProductContainerLayout">


            </LinearLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25sp"
                android:text="AWB CHARGES"/>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llAwbChargeContainerLayout">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>